<!DOCTYPE html>
<html>
  <head>
    <title>ActiveSerializerProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <header class="main_header">
      <div class="container_1">
        <nav>
          <ul class="main_navbar">
            <%= link_to image_tag("fantasy_sports.png", alt: "logo", class: "logo"), '/' %>
            <li id="main_navbar_li"><a href="/">Home</a></li>

            <% if logged_in? && current_user%>
              <% @user = current_user%>
              <li id ="main_navbar_li"><a href="/users/<%=@user.id%>"> My Fantasy Page </a> </li>
              <li id ="main_navbar_li"><a href="/logout"> Logout </a></li>
            <% else %>
              <li id="main_navbar_li"><a href="/login">Log In</a></li>
              <li id="main_navbar_li"><a href="/signup">Sign Up</a></li>
            <%end%>
          </ul>
        </nav>
      </div>
    </header>

    <%= yield %>

  </body>
</html>
