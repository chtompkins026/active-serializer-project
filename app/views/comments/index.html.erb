<h1> All Comments </h1>

<p> <%= link_to "Create a New Comment", new_comment_path %> </p>

<% @comments.each do |comment| %>
  <%= render partial: "comment", locals: {comment: comment} %>
<% end %>

<script>
  $(function () {
    $(".js-more").on('click', function() {
      var id = $(this).data("id");
      $.get("/comments/" + id + "/comment_data", function(data) {
        $("#body-" + id).html(data["description"]);
      });
    });
  });
</script>
