<a href="#" class="js-next" data-id="<%=@comment.id%>">Next...</a>
<h1 class="commentTitle"><%= @comment.title %></h1>
<p class="commentBody"><%= @comment.description %></p>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-next").on("click", function() {
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.get("/comments/" + nextId + ".json", function(data) {
      // get comment
      var comment = data;
      $(".commentTitle").text(comment["title"]);
      $(".commentBody").text(comment["description"]);
      // re-set the id to current on the link
      $(".js-next").attr("data-id", comment["id"]);
    });
  });
});
</script>
