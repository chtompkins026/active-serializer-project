<h1> Player Research Center </h1>

<table class="table table-hover players">
  <thead>
    <tr>
      <th> No. </th>
      <th> Name </th>
      <th> Position </th>
      <th> NBA Team </th>
      <th> Projected Points </th>
    </tr>
  </thead>
  <tbody>
    <% @players.each_with_index do |pl, index| %>
      <tr>
        <td> <%= index + 1%> </td>
        <td> <%= link_to pl.name, team_player_path(@team.id, pl.id)%> </td>
        <td> <%= pl.position %> </td>
        <td> <%=pl.nba_team %> </td>
        <td> <%= pl.points %> </td>
      </tr>
    <%end%>
  </tbody>
</table>
